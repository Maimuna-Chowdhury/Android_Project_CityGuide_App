<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.LoginSignup.ForgetPassword"
    android:background="@color/lightSky"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Selection"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:fontFamily="@font/muli_extrabold"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which contact detail should we use to reset your password?"
            android:textSize="18sp"
            android:fontFamily="@font/muli" />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="180dp"
              android:layout_marginTop="50dp"
              android:background="@color/lightWhite"
              android:padding="10dp">

              <ImageView
                  android:id="@+id/mobile_icon"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:src="@drawable/mobile"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="20dp"/>

              <TextView
                  android:id="@+id/mobile_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Via sms"
                  android:textSize="25sp"
                  android:fontFamily="@font/muli"
                  android:layout_toRightOf="@+id/mobile_icon"
                  android:layout_marginTop="35dp" />

              <TextView
                  android:id="@+id/mobile_des"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="01959561779"
                  android:textSize="25sp"
                  android:fontFamily="@font/muli"
                  android:layout_toRightOf="@+id/mobile_icon"
                  android:layout_below="@+id/mobile_title"
                  android:textColor="@color/black"/>

              <Button
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#00000000"/>


          </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="@color/lightWhite"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_email_24"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via mail"
                android:textSize="25sp"
                android:fontFamily="@font/muli"
                android:layout_toRightOf="@+id/mail_icon"
                android:layout_marginTop="35dp" />

            <TextView
                android:id="@+id/mail_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="support@gmail.com"
                android:textSize="25sp"
                android:fontFamily="@font/muli"
                android:layout_toRightOf="@+id/mail_icon"
                android:layout_below="@+id/mail_title"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>